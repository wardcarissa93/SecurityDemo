@model List<string>
@{
    ViewData["Title"] = "SQL Injection Demo";
    string message = ViewBag.Message ?? "";
}
<br />
<br />
<div class="container" style="height: 500px;">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 style="text-align: center;">SQL Injection Demo</h2>
            <p>
                SQL Injection is a security vulnerability that involves inserting malicious
                code into a system to manipulate its behavior or access unauthorized data.
                It is one of the most common web application vulnerabilities.
            </p>
        </div><br /><br />
        <div class="col-md-12" style="padding: 20px;"></div>
        <div class="form-container info-section col-md-12">
            <h3 style="text-align: center;">Select a City</h3>
            <hr />
            <form asp-controller="Home" asp-action="BuildingsInCity" method="get">
                <div class="form-group">
                    <select id="cityId" name="cityId" class="form-control">
                        <option value="">Make a selection</option>
                        @foreach (string item in Model)
                        {
                            string[] city = item.Split(',');
                            <option value="@city[0]">@city[1]</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <button type="submit">Submit</button>
                </div>
                @if (message.Length > 0)
                {
                    <div class="alert alert-danger">
                        @message
                    </div>
                }
            </form>
        </div>
    </div>
</div>
