@model List<string>

@{
    ViewData["Title"] = "Buildings In City";
    string itemType = Model[0];
    Model.Remove(itemType);
}
<br />
<br />
<div class="jumbotron-detail row">
    <div class="col-sm-8 offset-3 row">
        <div class="col-sm-6 display-6">Buildings in @itemType</div>
        <div class="col-sm-3">
            <a class="btn btn-primary" asp-area="" asp-controller="Home"
               asp-action="InjectionDemo">Back to selection</a>
        </div>
        <hr class="col-sm-9" />
    </div>
    <div class="city-container ">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Building</th>
                    <th>Room</th>
                    <th>Capacity</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    string[] buildingDetails = item.Split(',');
                    <tr>
                        <td>@buildingDetails[0]</td>
                        <td>@buildingDetails[1]</td>
                        <td>@buildingDetails[2]</td>
                        <td>@buildingDetails[3]</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

