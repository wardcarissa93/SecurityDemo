@model List<ProductVM>
@{
    ViewData["Title"] = "SQL Injection Demo";
    string message = ViewBag.Message ?? "";
}
<br />
<br />
<div class="container" style="height: 500px;">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 style="text-align: center;">SQL Injection with URL Parameters Demo</h2>
            <p>
                SQL Injection with URL Parameters is a security vulnerability where
                attackers manipulate URL query strings to execute malicious SQL
                commands in a database.
            </p>
        </div><br /><br />
        <div class="col-md-12" style="padding: 20px;"></div>
        <div class="form-container info-section col-md-12">
            <h3 style="text-align: center;">Select a Product</h3>
            <hr />
            <form asp-controller="Home" asp-action="DisplayProduct" method="get">
                <div class="form-group">
                    <select id="prodID" name="prodID" class="form-control">
                        <option value="">Make a selection</option>
                        @foreach (ProductVM product in Model)
                        {
                            <option value="@product.ProdID">@product.ProdName</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <button type="submit">Submit</button>
                </div>
                @if (message.Length > 0)
                {
                    <div class="alert alert-danger">
                        @message
                    </div>
                }
            </form>
        </div>
    </div>
</div>
